# Editor configuration, see http://editorconfig.org
root = true // 是否从根目录起开始生效

[*]
# charset = utf-8 // 编码字符集
# indent_style = space // 缩进风格 space 或者 tab
# indent_size = 2 // 缩进个数
# insert_final_newline = true // 末尾插入新行
# trim_trailing_whitespace = true // 空格过滤

[*.md]
max_line-length = off
trim_trailing_whitespace = false
